<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="2" android:versionName="1.1"
    package="es.glasspixel.wlanaudit" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:icon="@drawable/icon"
        android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".activities.NetworkListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="es.glasspixel.wlanaudit.activities.NetworkDetailsActivity"/>
        <activity android:name="es.glasspixel.wlanaudit.activities.WLANAuditPreferencesActivity"/>
        <activity android:name="es.glasspixel.wlanaudit.activities.AboutActivity">
            <intent-filter>
                <action android:name="com.glasspixel.wlanaudit.ABOUT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="com.google.ads.AdActivity"/>
        <activity android:name="es.glasspixel.wlanaudit.activities.KeyListActivity"/>
    </application>
</manifest>
